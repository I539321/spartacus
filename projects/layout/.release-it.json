{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": false,
    "tagName": "cms-${version}",
    "commitMessage": "Bumping cms version to ${version}",
    "tagAnnotation": "Bumping cms version to ${version}"
  },
  "npm": {
    "publishPath": "./../../dist/layout"
  },
  "hooks": {
    "after:version:bump": "cd ../.. && ng build layout --configuration production"
  },
  "github": {
    "release": true,
    "assets": [
      "../../docs.tar.gz",
      "../../docs.zip",
      "../../spartacussampledataaddon.1905.zip",
      "../../spartacussampledataaddon.1905.tar.gz",
      "../../spartacussampledata.2005.zip",
      "../../spartacussampledata.2005.tar.gz",
      "../../spartacussampledata.2011.zip",
      "../../spartacussampledata.2011.tar.gz"
    ],
    "releaseName": "@spartacus/cms@${version}",
    "releaseNotes": "ts-node ../../scripts/changelog.ts --verbose --lib cms --to cms-${version}"
  },
  "plugins": {
    "../../scripts/release-it/bumper.js": {
      "out": [
        {
          "file": "package.json",
          "path": [
            "peerDependencies.@spartacus/core",
            "peerDependencies.@spartacus/storefront"
          ]
        }
      ]
    }
  }
}
